<Window x:Class="TechManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechManager"
        mc:Ignorable="d"
        Title="TechManager v1.0.0" Height="640" Width="1024" WindowStartupLocation="CenterScreen">
    <Grid Background="#F9F9F9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border BorderBrush="Black" BorderThickness="0,0,2,0">
            <StackPanel Background="#F2F2F2">
                <TextBlock
                    Text="Tech Manager"
                    FontSize="28"
                    FontWeight="DemiBold"
                    HorizontalAlignment="Stretch"
                    TextAlignment="Center"
                    Margin="0,60,0,0"/>
                
                <Button
                    Click="OpenTecnicosView"
                    Content="Técnicos" FontSize="24"
                    HorizontalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0" Margin="0,40,0,0"
                    Padding="10"/>
                
                <Button
                    Click="OpenDispositivosView"
                    Content="Dispositivos" FontSize="24"
                    HorizontalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="10"/>

                <Button
                    Click="OpenConocimientosView"
                    Content="Conocimientos" FontSize="24"
                    HorizontalAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="10"/>

            </StackPanel>
        </Border>

        <ContentControl x:Name="MainContainer" Grid.Column="1"/>
    </Grid>
</Window>
