<Window x:Class="UI.Views.CreateConocimientoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Views"
        mc:Ignorable="d"
        Title="Asociar conocimiento" Width="460" SizeToContent="Height" Background="#F2F2F2" WindowStartupLocation="CenterScreen">
    
    <Grid HorizontalAlignment="Center" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Asociar conocimiento" FontSize="18" FontWeight="DemiBold" VerticalAlignment="Center" Margin="0,20,0,0"/>
        <Grid Grid.Row="1" Margin="0,30,0,0" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Técnico:" Grid.Column="0" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center"/>
            <ComboBox Grid.Column="1"
                      Grid.ColumnSpan="2"
                      Width="250"
                      Padding="8"
                      ItemsSource="{Binding Tecnicos}"
                      SelectedItem="{Binding SelectedTecnico}"
                      DisplayMemberPath="FullName"
                      FontSize="14"/>

            <TextBlock Text="Dispositivos:" Grid.Row="2" Grid.Column="0" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Top"/>
            <ListBox ItemsSource="{Binding AvailableConocimientos}"
                     Grid.Row="2"
                     Grid.Column="1">
                <ListBox.ItemTemplate>
                    <HierarchicalDataTemplate>
                        <CheckBox Content="{Binding Dispositivo.FullName}" IsChecked="{Binding IsChecked}"/>
                    </HierarchicalDataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <TextBlock Grid.Row="2" Text="{Binding Message}" Foreground="{Binding MessageColor}" FontSize="14" Margin="0,30"/>
        <Grid Grid.Row="3" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Content="Cancelar"
                Command="{Binding CancelNuevoConocimientoCommand}"
                Width="120"
                Padding="8"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Background="#ECECEC"
                FontSize="14"
                FontWeight="DemiBold"/>
            <Button
                Grid.Column="1"
                Content="Guardar"
                Command="{Binding SaveNuevoConocimientoCommand}"
                Width="120"
                Padding="8"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                Background="#ECECEC"
                FontSize="14"
                FontWeight="DemiBold"/>
        </Grid>
    </Grid> 
</Window>
