<Window x:Class="UI.Views.CreateActualizacionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Views"
        mc:Ignorable="d"
        Title="Añadir actualización" Width="460" SizeToContent="Height" Background="#F2F2F2" WindowStartupLocation="CenterScreen">
    <Grid HorizontalAlignment="Center" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Añadir actualización" FontSize="18" FontWeight="DemiBold" VerticalAlignment="Center" Margin="0,20,0,0"/>
        <Grid Grid.Row="1" Margin="0,30,0,0" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Dispositivo:" Grid.Column="0" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center"/>
            <ComboBox Grid.Column="1"
                      Grid.ColumnSpan="2"
                      Width="200"
                      Padding="8"
                      Margin="0,0,0,5"
                      ItemsSource="{Binding Dispositivos}"
                      SelectedItem="{Binding SelectedDispositivo, NotifyOnTargetUpdated=True}"
                      DisplayMemberPath="FullName"
                      FontSize="14"/>

            <TextBlock Text="Versión:" Grid.Row="1" Grid.Column="0" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Version}" Grid.Row="1" Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center" Grid.ColumnSpan="2"/>

            <TextBlock Text="Descripción:" Grid.Row="2" Grid.Column="0" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center"/>
            <TextBox Text="{Binding Descripcion}" Grid.Row="2" Grid.Column="1" Width="200" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center" Grid.ColumnSpan="2"/>
        </Grid>

        <TextBlock Grid.Row="2" Text="{Binding Message}" Foreground="{Binding MessageColor}" FontSize="14" Margin="0,30"/>
        <Grid Grid.Row="3" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Cancelar"
                    Command="{Binding CancelNuevaActualizacionCommand}"
                    Width="120"
                    Padding="8"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Background="#ECECEC"
                    FontSize="14"
                    FontWeight="DemiBold"/>
            <Button Grid.Column="1"
                    Content="Guardar"
                    Command="{Binding SaveNuevaActualizacionCommand}"
                    Width="120"
                    Padding="8"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    Background="#ECECEC"
                    FontSize="14"
                    FontWeight="DemiBold"/>
        </Grid>
    </Grid>
</Window>
