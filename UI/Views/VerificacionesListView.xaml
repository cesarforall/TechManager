<Window x:Class="UI.Views.VerificacionesListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Views"
        xmlns:converters="clr-namespace:UI.Converters"
        mc:Ignorable="d"
        Title="Lista de verificaciones" Width="560" SizeToContent="Height" Background="#F2F2F2" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
        <converters:IntToIsEnabledConverter x:Key="IntToIsEnabledConverter"/>
    </Window.Resources>
    
    <Grid HorizontalAlignment="Center" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Lista de verificaciones" FontSize="18" FontWeight="DemiBold" VerticalAlignment="Center" Margin="0,20,0,0"/>
        
        <Grid Grid.Row="1" Margin="0,10,0,0" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Id de actualización:" Grid.Column="0" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Id}" Grid.Row="0" Grid.Column="1" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center" Padding="2,0,0,0"/>

            <TextBlock Text="Dispositivo:" Grid.Column="0" Grid.Row="1" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Dispositivo.FullName}" Grid.Row="1" Grid.Column="1" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center" Padding="2,0,0,0"/>

            <TextBlock Text="Versión:" Grid.Column="0" Grid.Row="2" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Version}" Grid.Row="2" Grid.Column="1" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center" Padding="2,0,0,0"/>

            <TextBlock Text="Descripción:" Grid.Column="0" Grid.Row="3" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Descripcion}" Grid.Row="3" Grid.Column="1" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center" Padding="2,0,0,0"/>

            <TextBlock Text="Fecha:" Grid.Column="0" Grid.Row="4" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Fecha}" Grid.Row="4" Grid.Column="1" FontSize="14" FontWeight="DemiBold" VerticalAlignment="Center" Padding="2,0,0,0"/>

        </Grid>

        <Grid Grid.Row="2">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <CheckBox FontSize="14"
                      Content="Ver solo por confirmar"
                      Margin="0, 30,0,20"
                      IsChecked="{Binding PendientesChecked}" />

            <DataGrid Grid.Row="1"
                      Height="200"
                      ItemsSource="{Binding DisplayedVerificaciones}"
                      BorderThickness="0"
                      Background="Transparent"
                      GridLinesVisibility="None"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      HorizontalScrollBarVisibility="Auto"
                      RowHeaderWidth="0">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="Black" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="FontWeight" Value="DemiBold"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Height" Value="40"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Height" Value="35"/>
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#F2F2F2"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#F2F2F2"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Tecnico" Binding="{Binding Tecnico.FullName}" Width="150"/>
                    <DataGridTemplateColumn Header="Confirmado" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                    <CheckBox IsChecked="{Binding Confirmado, Converter={StaticResource IntToBoolConverter}, Mode=OneWay}"
                                              IsEnabled="{Binding Confirmado, Converter={StaticResource IntToIsEnabledConverter}}"
                                              Command="{Binding DataContext.ToggleConfirmadoCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                              CommandParameter="{Binding}"
                                              HorizontalAlignment="Center"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding FechaConfirmacion, StringFormat='{}{0:dd/MM/yyyy}'}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

        <TextBlock Grid.Row="3" Text="{Binding Message}" Foreground="{Binding MessageColor}" FontSize="14" Margin="0,10"/>

        <Grid Grid.Row="4" Margin="0,30,0,30" Width="350">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Cancelar"
                    Command="{Binding CancelVerificacionesCommand}"
                    Width="120"
                    Padding="8"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left"
                    Background="#ECECEC"
                    FontSize="14"
                    FontWeight="DemiBold"/>
            
            <Button Grid.Column="1"
                    Content="Guardar"
                    Command="{Binding SaveVerificacionesCommand}"
                    Width="120"
                    Padding="8"
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    Background="#ECECEC"
                    FontSize="14"
                    FontWeight="DemiBold"/>
        </Grid>
    </Grid>
</Window>
