<UserControl x:Class="UI.Views.TecnicosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="#F9F9F9">
    <Grid Margin="30, 60, 30, 30" Background="#F9F9F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Técnicos" FontSize="26" FontWeight="DemiBold"/>
            <Button
                Content="+ Añadir técnico"
                Padding="10"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Background="#F2F2F2"
                FontSize="14"
                FontWeight="DemiBold"/>
        </StackPanel>

        <DataGrid
            x:Name="TecnicosDataGrid"
            Grid.Row="1"
            ItemsSource="{Binding Tecnicos}"
            Margin="0,30,0,0"
            BorderThickness="0"
            Background="Transparent"
            GridLinesVisibility="None"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True"
            RowHeaderWidth="0">
            
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                    <Setter Property="FontWeight" Value="DemiBold"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="Height" Value="40"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#F2F2F2"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#F2F2F2"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="100"/>
                <DataGridTextColumn Header="Apellidos" Binding="{Binding Apellidos}" Width="150"/>
                <DataGridTextColumn Header="Gaveta" Binding="{Binding Gaveta}" Width="80"/>
                <DataGridTextColumn Header="Nombre PC" Binding="{Binding NombrePC}" Width="120"/>
                <DataGridTextColumn Header="Usuario PC" Binding="{Binding UsuarioPC}" Width="120"/>
                <DataGridTemplateColumn Header="Acción" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <Button
                                    Content="✏️"
                                    Padding="5"
                                    Background="Transparent"
                                    FontWeight="DemiBold"/>
                                
                                <Button
                                    Content="🗑️"
                                    Padding="5"
                                    Background="Transparent"
                                    FontWeight="DemiBold"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</UserControl>
