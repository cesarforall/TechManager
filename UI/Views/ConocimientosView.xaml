<UserControl x:Class="UI.Views.ConocimientosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#F9F9F9">

    <Grid Margin="30, 60, 30, 30" Background="#F9F9F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <TextBlock Text="Conocimientos" FontSize="26" FontWeight="DemiBold"/>
            
            <Button
                Grid.Row="1"
                Content="+ Asociar conocimiento"
                Command="{Binding OpenCreateConocimientoViewCommand}"
                Padding="10"
                Margin="0,10,0,0"
                HorizontalAlignment="Right"
                Background="#F2F2F2"
                FontSize="14"
                FontWeight="DemiBold" />

            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Agrupar por:" FontSize="14" VerticalAlignment="Center"/>

                <ComboBox
                    Grid.Column="1"
                    Width="150"
                    Padding="10"
                    ItemsSource="{Binding GroupingOptions}"
                    SelectedItem="{Binding SelectedGroupingOption}"
                    Margin="10,0,0,0"
                    FontSize="14">
                </ComboBox>
            </Grid>
        </Grid>

        <ContentControl Grid.Row="1" Content="{Binding}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="ContentTemplate">
                        <Setter.Value>
                            <DataTemplate>
                                <!-- Todos -->
                                <DataGrid
                                    Grid.Row="1"
                                    ItemsSource="{Binding Conocimientos}"
                                    Width="Auto"
                                    Margin="0,30,0,0"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    GridLinesVisibility="None"
                                    AutoGenerateColumns="False"
                                    CanUserAddRows="False"
                                    IsReadOnly="True"
                                    RowHeaderWidth="0">

                                    <DataGrid.ColumnHeaderStyle>
                                        <Style TargetType="DataGridColumnHeader">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Black" />
                                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                                            <Setter Property="FontWeight" Value="DemiBold"/>
                                            <Setter Property="FontSize" Value="14"/>
                                            <Setter Property="Height" Value="40"/>
                                        </Style>
                                    </DataGrid.ColumnHeaderStyle>

                                    <DataGrid.RowStyle>
                                        <Style TargetType="DataGridRow">
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Height" Value="35"/>
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#F2F2F2"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>

                                    <DataGrid.CellStyle>
                                        <Style TargetType="DataGridCell">
                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#F2F2F2"/>
                                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.CellStyle>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                                        <DataGridTextColumn Header="Técnico" Binding="{Binding Tecnico.FullName}" Width="150"/>
                                        <DataGridTextColumn Header="Dispositivo" Binding="{Binding Dispositivo.FullName}" Width="150"/>
                                        <DataGridTemplateColumn Header="Acción" Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                        <Button
                                                            Content="🗑️"
                                                            Command="{Binding DataContext.DeleteConocimientoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                            CommandParameter="{Binding}"
                                                            Padding="5"
                                                            Background="Transparent"
                                                            FontWeight="DemiBold"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </DataTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <!-- Técnicos -->
                        <DataTrigger Binding="{Binding SelectedGroupingOption}" Value="Técnicos">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <DataGrid
                                            ItemsSource="{Binding GroupedConocimientos}"
                                            Margin="0,30,0,0"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            GridLinesVisibility="None"
                                            AutoGenerateColumns="False"
                                            CanUserAddRows="False"
                                            IsReadOnly="True"
                                            RowHeaderWidth="0"
                                            ClipToBounds="True">

                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="Black" />
                                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                    <Setter Property="FontWeight" Value="DemiBold"/>
                                                    <Setter Property="FontSize" Value="14"/>
                                                    <Setter Property="Height" Value="40"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>

                                            <DataGrid.RowStyle>
                                                <Style TargetType="DataGridRow">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="FontSize" Value="13"/>
                                                    <Setter Property="Height" Value="35"/>
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="#F2F2F2"/>
                                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                                            <Setter Property="Foreground" Value="Black"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGrid.RowStyle>

                                            <DataGrid.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="#F2F2F2"/>
                                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                                            <Setter Property="Foreground" Value="Black"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGrid.CellStyle>

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                                                <DataGridTextColumn Binding="{Binding Tecnico.FullName}" Width="200">
                                                    <DataGridTextColumn.Header>
                                                        <HeaderedContentControl>
                                                            <Grid Width="200">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Grid.Column="0"
                                                                           VerticalAlignment="Center"
                                                                           Text="Técnico"/>

                                                                <Button Content="↑↓"
                                                                        Grid.Column="1"
                                                                        HorizontalAlignment="Right"
                                                                        Command="{Binding DataContext.ToggleSortCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                        Padding="5"
                                                                        Margin="0,0,10,0"
                                                                        Background="Transparent"
                                                                        FontWeight="DemiBold"/>
                                                            </Grid>
                                                        </HeaderedContentControl>
                                                    </DataGridTextColumn.Header>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Dispositivo" Binding="{Binding Dispositivo.FullName}" Width="200"/>
                                                <DataGridTemplateColumn Header="Acción" Width="*">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                                <Button Content="🗑️"
                                                                        Command="{Binding DataContext.DeleteConocimientoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                        CommandParameter="{Binding}"
                                                                        Padding="5"
                                                                        Background="Transparent"
                                                                        FontWeight="DemiBold"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>

                                            <DataGrid.GroupStyle>
                                                <GroupStyle>
                                                    <GroupStyle.ContainerStyle>
                                                        <Style TargetType="{x:Type GroupItem}">
                                                            <Setter Property="Margin" Value="0"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                                                        <Expander IsExpanded="True">
                                                                            <Expander.Style>
                                                                                <Style TargetType="Expander">
                                                                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                                                    <Setter Property="BorderBrush" Value="#ECECEC"/>
                                                                                </Style>
                                                                            </Expander.Style>
                                                                            <Expander.Header>
                                                                                <DockPanel>
                                                                                    <TextBlock Text="{Binding Name}"
                                                                                               Padding="5"
                                                                                               FontSize="16"
                                                                                               Margin="28,0,0,0"/>
                                                                                    <TextBlock Text="{Binding ItemCount, StringFormat='({0} dispositivos)'}"
                                                                                               Margin="5,0,0,0"
                                                                                               VerticalAlignment="Center"/>
                                                                                </DockPanel>
                                                                            </Expander.Header>
                                                                            <Expander.Content>
                                                                                <ItemsPresenter />
                                                                            </Expander.Content>
                                                                        </Expander>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </GroupStyle.ContainerStyle>
                                                </GroupStyle>
                                            </DataGrid.GroupStyle>
                                        </DataGrid>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <!-- Dispositivos -->
                        <DataTrigger Binding="{Binding SelectedGroupingOption}" Value="Dispositivos">
                            <Setter Property="ContentTemplate">
                                <Setter.Value>
                                    <DataTemplate>
                                        <DataGrid ItemsSource="{Binding GroupedConocimientos}"
                                                  Margin="0,30,0,0"
                                                  BorderThickness="0"
                                                  Background="Transparent"
                                                  GridLinesVisibility="None"
                                                  AutoGenerateColumns="False"
                                                  CanUserAddRows="False"
                                                  IsReadOnly="True"
                                                  RowHeaderWidth="0"
                                                  ClipToBounds="True">

                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="Black" />
                                                    <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                    <Setter Property="FontWeight" Value="DemiBold"/>
                                                    <Setter Property="FontSize" Value="14"/>
                                                    <Setter Property="Height" Value="40"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>

                                            <DataGrid.RowStyle>
                                                <Style TargetType="DataGridRow">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="FontSize" Value="13"/>
                                                    <Setter Property="Height" Value="35"/>
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                    <Style.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="#F2F2F2"/>
                                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                                            <Setter Property="Foreground" Value="Black"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGrid.RowStyle>

                                            <DataGrid.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="#F2F2F2"/>
                                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                                            <Setter Property="Foreground" Value="Black"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGrid.CellStyle>

                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                                                <DataGridTextColumn Binding="{Binding Dispositivo.FullName}" Width="200">
                                                    <DataGridTextColumn.Header>
                                                        <HeaderedContentControl>
                                                            <Grid Width="200">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <TextBlock Grid.Column="0"
                                                                           VerticalAlignment="Center"
                                                                           Text="Dispositivo"/>

                                                                <Button Content="↑↓"
                                                                        Grid.Column="1"
                                                                        HorizontalAlignment="Right"
                                                                        Command="{Binding DataContext.ToggleSortCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                        Padding="5"
                                                                        Margin="0,0,10,0"
                                                                        Background="Transparent"
                                                                        FontWeight="DemiBold"/>
                                                            </Grid>
                                                        </HeaderedContentControl>
                                                    </DataGridTextColumn.Header>
                                                </DataGridTextColumn>
                                                <DataGridTextColumn Header="Técnico" Binding="{Binding Tecnico.FullName}" Width="200"/>
                                                <DataGridTemplateColumn Header="Acción" Width="*">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                                                <Button Content="🗑️"
                                                                        Command="{Binding DataContext.DeleteConocimientoCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                                        CommandParameter="{Binding}"
                                                                        Padding="5"
                                                                        Background="Transparent"
                                                                        FontWeight="DemiBold"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>

                                            <DataGrid.GroupStyle>
                                                <GroupStyle>
                                                    <GroupStyle.ContainerStyle>
                                                        <Style TargetType="{x:Type GroupItem}">
                                                            <Setter Property="Margin" Value="0"/>
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="{x:Type GroupItem}">
                                                                        <Expander IsExpanded="True">
                                                                            <Expander.Style>
                                                                                <Style TargetType="Expander">
                                                                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                                                    <Setter Property="BorderBrush" Value="#ECECEC"/>
                                                                                </Style>
                                                                            </Expander.Style>
                                                                            <Expander.Header>
                                                                                <DockPanel>
                                                                                    <TextBlock Text="{Binding Name}"
                                                                                               Padding="5"
                                                                                               FontSize="16"
                                                                                               Margin="28,0,0,0"/>
                                                                                    <TextBlock Text="{Binding ItemCount, StringFormat='({0} técnicos)'}"
                                                                                               Margin="5,0,0,0"
                                                                                               VerticalAlignment="Center"/>
                                                                                </DockPanel>
                                                                            </Expander.Header>
                                                                            <Expander.Content>
                                                                                <ItemsPresenter />
                                                                            </Expander.Content>
                                                                        </Expander>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </GroupStyle.ContainerStyle>
                                                </GroupStyle>
                                            </DataGrid.GroupStyle>
                                        </DataGrid>
                                    </DataTemplate>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

    </Grid>
</UserControl>
